{
  "identifier": "com.alpha.splash",
  "productName": "ALPHA Splash",
  "version": "0.1.2",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "publisher": "ALPHA",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "app": {
  "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "ALPHA Hardware Monitor",
        "width": 1400,
        "center": true,
        "decorations": true,
        "transparent": false,
        "minHeight": 600,
        "minWidth": 800,
        "maxHeight": 1080,
        "maxWidth": 1920
      }
    ]
  }
}
